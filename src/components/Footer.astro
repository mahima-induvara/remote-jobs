---
import "../styles/footer.scss";
import Logo from "@assets/Remote-jobs-logo.png";
---
<footer class="site-footer">
  <!-- Support banner -->
  <div class="support-banner">
    <div class="inner container">
      <div class="text">
        <h3 class="title">Still Need Help?</h3>
        <p class="subtitle">Let us know about your issue and our team will reach out to you.</p>
      </div>
      <div class="action">
        <a class="contact-btn" href="/contact-us">Contact Support</a>
      </div>
    </div>
  </div>

  <!-- Main footer -->
  <div class="footer-main">
    <div class="container">
      <div class="top">
        <div class="brand">
          <a href="/" class="logo">
            <img src={Logo.src} alt="RemoteJobsInAsia Logo" class="w-auto h-16" />
          </a>
          <div class="links">
            <a href="/about-us">About Us</a>
            <span class="sep">·</span>
            <a href="/contact-us">Contact Us</a>
            <!-- <span class="sep">·</span>
            <a href="/privacy-policy">Privacy Policy</a> -->
          </div>
        </div>

        <div class="social">
          <a aria-label="Facebook" href="https://www.facebook.com/lifeatlevein" class="icon" target="_blank" rel="noopener noreferrer">
            <!-- Facebook SVG -->
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
              stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3.5l.5-4H14V7a1 1 0 0 1 1-1h3z" />
            </svg>
          </a>
          <a aria-label="Instagram" href="https://www.instagram.com/lifeatlevein/?igsh=dDFxYnp0Znc3M3Uw#" class="icon" target="_blank" rel="noopener noreferrer">
            <!-- Instagram SVG -->
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
              stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5" />
              <circle cx="12" cy="12" r="5" />
              <circle cx="17.5" cy="6.5" r="1.5" />
            </svg>
          </a>
          <a aria-label="TikTok" href="https://www.tiktok.com/@leveingroup?_t=8qEPlepx4cs&_r=1" class="icon" target="_blank" rel="noopener noreferrer">
            <!-- TikTok SVG (simplified) -->
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none">
            <path d="M16.8217 5.1344C16.0886 4.29394 15.6479 3.19805 15.6479 2H14.7293M16.8217 5.1344C17.4898 5.90063 18.3944 6.45788 19.4245 6.67608C19.7446 6.74574 20.0786 6.78293 20.4266 6.78293V10.2191C18.645 10.2191 16.9932 9.64801 15.6477 8.68211V15.6707C15.6477 19.1627 12.8082 22 9.32386 22C7.50043 22 5.85334 21.2198 4.69806 19.98C3.64486 18.847 2.99994 17.3331 2.99994 15.6707C2.99994 12.2298 5.75592 9.42509 9.17073 9.35079M16.8217 5.1344C16.8039 5.12276 16.7861 5.11101 16.7684 5.09914M6.9855 17.3517C6.64217 16.8781 6.43802 16.2977 6.43802 15.6661C6.43802 14.0734 7.73249 12.7778 9.32394 12.7778C9.62087 12.7778 9.9085 12.8288 10.1776 12.9124V9.40192C9.89921 9.36473 9.61622 9.34149 9.32394 9.34149C9.27287 9.34149 8.86177 9.36884 8.81073 9.36884M14.7244 2H12.2097L12.2051 15.7775C12.1494 17.3192 10.8781 18.5591 9.32386 18.5591C8.35878 18.5591 7.50971 18.0808 6.98079 17.3564" stroke="#fff" stroke-width="2" stroke-linejoin="round"/>
            </svg>
          </a>
          <a aria-label="LinkedIn" href="https://www.linkedin.com/company/levein-group/" class="icon" target="_blank" rel="noopener noreferrer">
            <!-- LinkedIn SVG -->
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
              stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-4 0v7h-4v-7a6 6 0 0 1 6-6z" />
              <rect x="2" y="9" width="4" height="12" rx="2" ry="2" />
              <circle cx="4" cy="4" r="2" />
            </svg>
          </a>
        </div>
      </div>

      <div class="bottom">
       <p>&copy; {new Date().getFullYear()} Remote Jobs in Asia</p>
      </div>
    </div>
  </div>
</footer>
