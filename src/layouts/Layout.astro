import Header from '@components/Header';
import Footer from '@components/Footer.astro';
import "@styles/global.css";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/cropped-rja-fav-icon-1-32x32.png" sizes="32x32" />
		<link rel="icon" href="/cropped-rja-fav-icon-1-192x192.png" sizes="192x192" />
